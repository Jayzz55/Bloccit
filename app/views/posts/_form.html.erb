<%= form_for [topic, post] do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= simple_form_for [@topic, @post], defaults: { class: 'form-group' } do |f| %>
    <%= f.input :title, placeholder: 'Enter Post Title' %>
    <%= f.input :body %>
    <%= f.button :submit %>
  <% end %>
<% end %>