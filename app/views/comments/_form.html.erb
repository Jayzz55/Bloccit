<%= form_for [topic, post, Comment.new] do |f| %>
   <div class="form-group">
     <%= f.label :body, 'Comments' %>
     <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter comments" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>